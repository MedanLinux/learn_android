<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.labsgn.labsgn_learn_android.SubActivity">

    <include layout="@layout/statusbar" />

    <include
        android:id="@+id/subToolbar"
        layout="@layout/toolbar" />

    <!--Todo 2. -->
    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/subMaterialTab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:accentColor="@color/colorAccent"
        app:primaryColor="@color/colorPrimary"
        app:textColor="#FFFFFF" />

    <android.support.v4.view.ViewPager
        android:id="@+id/subViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:background="@color/colorPrimary"
        android:text="Percobaan Library Sliding Tab"
        android:textColor="#FFF"/>

</LinearLayout>
