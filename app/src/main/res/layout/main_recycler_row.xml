<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_row_heigth"
    android:gravity="center_vertical|start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recyclerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/drawer_padding_start"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/drawer_padding_start" />

    <TextView
        android:id="@+id/recylcerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recycler_margin_title_start"
        android:layout_marginStart="@dimen/recycler_margin_title_start" />

</LinearLayout>